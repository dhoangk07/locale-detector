<% if repo.user == current_user %>
  <%= link_to edit_repo_path(repo) do %>
    <button class="btn badge-primary btn-sm" title="Edit" ><i class="fa fa-edit"></i></button>
  <% end %>
  <% if action_name == 'show'%>
    <%= link_to repo_path(repo), method: :delete, data: { confirm: "Are you sure? "} do %>
      <button class="btn badge-primary btn-sm" title="Destroy"><i class="fa fa-trash"></i></button> 
    <% end %>
  <% end %>
<% end %>
<button class="btn badge-primary btn-sm" title="<%=repo.user.email %>"><%= image_tag repo.user.gravatar_url(size: 20) %></button> 
<button class="btn badge-primary btn-sm " title="link"><a href="<%= repo.url %>" target="_blank" class='link_white'><i class="fa fa-link"></i></a></button>
<button class="btn badge-primary btn-sm " title="Quantity Subscribes"><%=repo.subscribes.count %></button> <br>

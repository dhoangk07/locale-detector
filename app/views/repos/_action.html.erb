<% if action_name == "index" %>
  <%= link_to repo_path(repo) do %>
    <button class="btn badge-info btn-sm" title="Show"><i class="fa fa-eye fa-2x"></i></button>
  <% end %>
<% end %>
<%= link_to edit_repo_path(repo) do %>
  <button class="btn badge-info btn-sm" title="Edit" ><i class="fa fa-edit fa-2x"></i></button>
<% end %>
<%= link_to repo_path(repo), method: :delete, data: { confirm: "Are you sure? "} do %>
  <button class="btn badge-info btn-sm" title="Destroy"><i class="fa fa-trash fa-2x"></i></button> 
<% end %>
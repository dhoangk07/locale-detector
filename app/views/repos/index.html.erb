<div class="container">
  <h3 class="text-uppercase text-success text-center">Listing of Repos</h3>
  <table class="table table-striped">
    <thead>
      <tr class="text-center border-off">
        <th></th>
        <th class="text-left">Url</th>
        <th class="text-right">Name</th>
        <th colspan="3" >Action</th>
      </tr>
    </thead>
    <tbody >
      <% @repos.each do |repo| %>
      <tr >
        <td></td>
        <td><a href="<%= repo.url %>" target="_blank"><%= repo.url %></a></td>
        <td class="text-right"><%= repo.name%></td>
        <td class="text-center">
          <div class="btn-group">
            <button type="button" class="btn btn-info btn-sm">Action</button>
            <button type="button" class="btn btn-info btn-sm dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="sr-only">Toggle Dropdown</span>
            </button>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="#"><%= link_to 'Show', repo_path(repo)%></a>
              <a class="dropdown-item" href="#"><%= link_to "Edit", edit_repo_path(repo)%></a>
              <a class="dropdown-item" href="#"><%= link_to "Destroy", repo_path(repo), method: :delete,
                                   data: { confirm: "Are you sure? "} %></a>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
